pipeline {
    agent any
    stages {
        stage('Create Security server sidecar with Finnish settings docker image') {
            steps {
                build job: 'docker-build-security-server-sidecar-fi',
                parameters: [
                    string(name: 'RELEASE_VERSION', value: params.RELEASE_VERSION),
                    string(name: 'IMAGE_TAG', value: params.IMAGE_TAG),
                    booleanParam(name: 'IS_LATEST', value: params.IS_LATEST)
                ]
            }
        }
        stage('Optionally publish image with latest-fi -tag') {
            when {
                expression { params.IS_LATEST == true }
            }
            steps {
                withDockerRegistry([ credentialsId: "dockerhub", url: "" ]) {
                    sh 'docker push niis/xroad-security-server-sidecar:latest-fi'
                }
            }
        }
        stage('Publish image with IMAGE_TAG-fi') {
            steps {
                withDockerRegistry([ credentialsId: "dockerhub", url: "" ]) {
                    sh 'docker push niis/xroad-security-server-sidecar:$IMAGE_TAG-fi'
                }
            }
        }
    }
}